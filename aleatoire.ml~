let alea n =
	let creer_formule i = match i with
		|  0 -> Const ((Random n) + 1)
		| _ -> begin 
			let a = Random.int 6 in 
			match a with
			| 0 -> Conj(creer_formule (i-1), creer_formule (i-1))
			| 1 -> Disj(creer_formule (i-1), creer_formule (i-1))
			| 2 -> Xor(creer_formule (i-1), creer_formule (i-1))
			| 3 -> Impl(creer_formule (i-1), creer_formule (i-1))
			| 4 -> Equiv(creer_formule (i-1), creer_formule (i-1))
			| 5 -> Not(creer_formule (i-1))
			end
let ecrire exp= 
	let file = open_out "test/alea.form" in
	let rec affiche_expr e =
  
  let aff_aux s a b = 
      begin
	output_string "(";
	affiche_expr a;
	output_string s;
	affiche_expr b;
	output_string ")"
      end
  in
  let aff_not a =
    begin
      output_string "~(";
      affiche_expr a;
      output_string ")"
    end
  in
  match e with
  | Const k -> output_string (string_of_int k)
  | Conj(e1,e2) -> aff_aux "/\\" e1 e2
  | Disj(e1,e2) -> aff_aux "\\/" e1 e2
  | Xor(e1,e2) -> aff_aux "Xor" e1 e2
  | Impl(e1,e2) -> aff_aux "=>" e1 e2
  | Equiv(e1,e2) -> aff_aux "<=>" e1 e2
  | Not(e1) -> aff_not e1
  in affiche_expr exp;
  close_out file